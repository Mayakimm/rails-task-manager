<div class="container-sm">
<h1 class="text-center">My tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <%= check_box_tag "task_#{task.id}", "completed", task.completed, class: "form-check-input me-2" %>
      <%= link_to task.title, task_path(task), class: "text-black text-decoration-none me-2"%>
      <%= link_to task_path(task),
          method: :delete,
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "delete-link" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
    </li>
  <% end %>
</ul>
<div class="btn btn-primary mt-3"><%= link_to "Add a new task", new_task_path, class:"text-white text-decoration-none" %></div>
</div>
